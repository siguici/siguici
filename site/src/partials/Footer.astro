---
import Icon from '../components/Icon.svelte';
const currentYear = new Date().getFullYear();
---

<footer>
	<p class="group">
		<span>Designed, Developed, and Deployed with ❤️</span>
		<span>by Sigui Kessé Emmanuel &copy; {currentYear}</span>
	</p>
	<p class="socials">
		<a href="https://twitter.com/siguici"> Twitter</a>
		<a href="https://github.com/siguici"> GitHub</a>
	</p>
</footer>
<style>
	footer {
		@apply flex flex-col gap-12 mt-auto py-12 px-8 text-center text-sm;
		color: var(--gray-400);

		& a {
			@apply underline underline-offset-2 decoration-solid decoration-transparent;
			color: var(--gray-400);
			transition: text-decoration-color var(--theme-transition);
		}

		& a:hover,
		& a:focus {
			@apply decoration-current;
		}

		@media (min-width: 50em) {
			& {
				@apply flex-row justify-between py-10 px-20;
			}
		}
	}

	.group {
		@apply flex flex-col gap-1;

		@media (min-width: 50em) {
			& {
				@apply flex-row flex-wrap;
			}
		}
	}

	.socials {
		@apply flex justify-center gap-4 flex-wrap;

		@media (min-width: 50em) {
			& {
				@apply justify-end;
			}
		}
	}
</style>
