<style>
	.about {
		@apply flex flex-col gap-14 my-14;

		@media (min-width: 50em) {
			& {
				@apply grid;
				grid-template-columns: 1fr 60% 1fr;
			}

			& > :global(:first-child) {
				grid-column-start: 2;
			}
		}
	}

	img {
		@apply mt-6 rounded-3xl;
		box-shadow: var(--shadow-md);
	}

	section {
		@apply flex flex-col gap-2 text-[var(--gray-200)];

		@media (min-width: 50em) {
			& {
				@apply contents text-xl;
			}
		}
	}

	.section-title {
		@apply text-2xl text-[var(--gray-0)];
		grid-column-start: 1;
	}

	.content {
    grid-column: 2 / 4;

		& :global(a) {
			text-decoration: 1px solid underline transparent;
			text-underline-offset: 0.25em;
			transition: text-decoration-color var(--theme-transition);
		}

		& :global(a:hover),
		& :global(a:focus) {
			text-decoration-color: currentColor;
		}
	}
</style>
