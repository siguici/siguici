{
  "name": "sigui.ci",
  "description": "Sigui's web application.",
  "engines": {
    "bun": ">=1.0.11",
    "deno": ">=1.38.1"
  },
  "packageManager": "bun@1.0.11",
  "publishConfig": {
    "access": "public"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "astro": "astro",
    "sync": "astro sync",
    "build": "bun fix && astro build",
    "check": "biome ci . && astro check",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "deploy": "deployctl deploy --project=sigui --no-static --include=./app ./app/start.ts",
    "dev": "astro dev",
    "fix": "bun lint && bun format",
    "format": "biome format --write .",
    "lint": "biome check --apply-unsafe .",
    "preview": "bun run build && bun run serve",
    "prod": "bun run build && bun run deploy",
    "serve": "deno run -A --unstable ./app/start.ts",
    "start": "astro dev --open"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.4",
    "@astrojs/deno": "^5.0.1",
    "@astrojs/preact": "^3.5.3",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.2.0",
    "@astrojs/tailwind": "^5.1.2",
    "astro": "^3.6.5",
    "preact": "^10.24.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@types/node": "^20.16.11",
    "autoprefixer": "^10.4.20",
    "bun-types": "^1.1.30",
    "cssnano": "^6.1.2",
    "postcss": "^8.4.47",
    "postcss-import": "^15.1.0",
    "postcss-load-config": "^4.0.2",
    "postcss-nested": "^6.2.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0"
  },
  "overrides": {
    "react": "npm:@preact/compat@latest",
    "react-dom": "npm:@preact/compat@latest"
  }
}
